    <option value="BE-ECE">BE-ECE</option>
    <option value="BE-EEE">BE-EEE</option>
    <option value="BTECH-IT">BTECH-IT</option>
    <option value="BE-BME">BE-BME</option>
    <option value="BE-MECH">BE-MECH</option>
    <option value="BE-CIVIL">BE-CIVIL</option>
    <option value="BE-AI/ML">BE-AI/ML</option>
  </select>

  <br>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1 bold" class="form-label">Message & Feedback :</label>
    <textarea class="form-control outline" name="userMessage" id="exampleFormControlTextarea1" rows="4" placeholder="Enter Something"></textarea>
  </div>

  
  <div class="button">
  <button class="btn btn-success btn" type="submit" name="button">Convey..</button>
  </div>

</form>

