      <input type="text" name="userName" class="form-control outline" id="exampleFormControlInput1" placeholder="Your Name (In Caps*)">
    </div>
    

    <label for="exampleFormControlInput1 bold" class="form-label">Current Year :</label>
    <select class="form-select outline" name="userYear" aria-label="Default select example" required>
